<!DOCTYPE html>
<html>
<head>
  <title>URLockBox</title>
  <%= stylesheet_link_tag    'application', media: 'all'%>
  <%= javascript_include_tag 'application'%>
  <%= csrf_meta_tags %>
</head>
<body>

  <% flash.each do |type, message| %>
    <%= content_tag :div, sanitize(message), class: "flash" %>
  <% end %>

  <% if current_user %>
    Signed in as <%= current_user.email %> | <%= link_to "Log out", logout_path %>
  <% else %>
    <%= link_to 'Log in', '/login' %> | <%= link_to 'Create Account', new_user_path %>
  <% end %>

  <div class="container">
    <%= yield %>
  </div>

</body>
</html>
