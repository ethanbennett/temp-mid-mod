<%= form_for @link, id: "link-form", remote: true do |f| %>

  <%= f.label :url %>
  <%= f.text_field :url, id: "url" %>

  <%= f.label :title %>
  <%= f.text_field :title, id: "title" %>

  <%= f.hidden_field :flash, value: @flash, id: "flash-message" %>
  <%= f.hidden_field :link_id, value: @new_link_id, id: "link-id" %>
  <%= f.hidden_field :user, value: current_user.id, id: "user" %>

  <%= f.submit "Submit", id: "create-link" %>

<% end %>