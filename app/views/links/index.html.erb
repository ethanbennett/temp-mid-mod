<h3>Add a link</h3>

<%= form_for @user.links.new do |f| %>

  <%= f.label :url %>
  <%= f.text_field :url %>

  <%= f.label :title %>
  <%= f.text_field :title %>
  
  <%= f.submit "Submit" %>

<% end %>

<p>---------------------------------------------------------------------------------</p>

<% @user.links.each do |link| %>
  <div class="link-list">
    <% if link.read %>
      <div class="read">
        <strong><%= link.title %></strong></br>
        <%= link.url %></br></br>
      </div>
    <% else %>
      <div class="unread">
        <strong><%= link.title %></strong></br>
        <%= link.url %></br></br>
      </div>
    </div>
  <% end %>
<% end %>