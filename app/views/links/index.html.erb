<h3>Add a link</h3>

<%= render partial: "form" %>

<p>---------------------------------------------------------------------------------</p>

<% @user.links.each do |link| %>
  <div class="link-list">
    <% if link.read %>
      <div class="read">
        <%= render partial: "link", :locals => {link: link} %>
      </div>
    <% else %>
      <div class="unread">
        <%= render partial: "link", :locals => {link: link} %>
      </div>
    </div>
  <% end %>
<% end %>